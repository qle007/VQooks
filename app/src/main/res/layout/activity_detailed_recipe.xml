<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/name_detailed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name of Recipe" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_detailed"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:src="@drawable/main_activity_wallpaper" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ingredients_detailed"
            android:text="- Eggs
- Salt
- Pepper"/>



    </LinearLayout>

    <TextView
        android:id="@+id/instruction_detailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instruction here" />

</LinearLayout>